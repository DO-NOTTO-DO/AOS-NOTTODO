                    <TextView
                        android:id="@+id/tv_addition_mission_opened_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:bufferType="spannable"
                        android:textAppearance="@style/Sb20"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_addition_mission_opened_title" />

                    <EditText
                        android:id="@+id/et_addition_mission"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:backgroundTint="@color/gray_3_5d5d6b"
                        android:inputType="text"
                        android:maxLength="20"
                        android:text="@={vm.mission}"
                        android:textAppearance="@style/M14"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_addition_mission_opened_desc" />

                    <TextView
                        android:id="@+id/tv_addition_mission_text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="21dp"
                        android:textAppearance="@style/R12"
                        android:textColor="@color/gray_3_5d5d6b"
                        app:layout_constraintEnd_toEndOf="@id/et_addition_mission"
                        app:layout_constraintTop_toBottomOf="@id/et_addition_mission" />

                    <TextView
                        android:id="@+id/tv_addition_mission_rv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="낫투두 입력 기록"
                        android:textAppearance="@style/R14"
                        android:textColor="@color/gray_4_9398aa"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_addition_mission" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_addition_mission"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="32dp"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_addition_mission_rv_title" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_addition_situation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle_stroke_gray3_1_radius_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_addition_mission">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_addition_situation_closed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_addition_situation_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="18dp"
                        android:layout_marginStart="18dp"
                        android:text="상황"
                        android:textAppearance="@style/R14"
                        android:textColor="@color/gray_7_8e8e93"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_addition_situation_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="82dp"
                        android:text="@string/addition_input"
                        android:textAppearance="@style/R14"
                        android:textColor="@color/gray_3_5d5d6b"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_addition_situation_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_check"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_addition_situation_opened"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_solid_gray_1_stroke_gray3_1_radius_12"
                    android:paddingHorizontal="18dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_addition_situation_opened_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="18dp"
                        android:text="상황"
                        android:textAppearance="@style/M14"
                        android:textColor="@color/green_1_98ffa9"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_addition_situation_opened_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:bufferType="spannable"
                        android:textAppearance="@style/Sb20"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_addition_situation_opened_title" />

                    <EditText
                        android:id="@+id/et_addition_situation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:backgroundTint="@color/gray_3_5d5d6b"
                        android:inputType="text"
                        android:textAppearance="@style/M14"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_addition_situation_opened_desc" />

                    <TextView
                        android:id="@+id/tv_addition_situation_text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/20"
                        android:textAppearance="@style/R12"
                        android:textColor="@color/gray_3_5d5d6b"
                        app:layout_constraintEnd_toEndOf="@id/et_addition_situation"
                        app:layout_constraintTop_toBottomOf="@id/et_addition_situation" />

                    <TextView
                        android:id="@+id/tv_addition_situation_recommend_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="추천 키워드"
                        android:textAppearance="@style/R14"
                        android:textColor="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_addition_situation" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/layout_addition_situation_recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_addition_situation_recommend_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_addition_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle_stroke_gray3_1_radius_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_addition_situation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_addition_action_closed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_addition_action_closed_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="18dp"
                        android:layout_marginStart="18dp"
                        android:text="실천행동"
                        android:textAppearance="@style/R14"
                        android:textColor="@color/gray_7_8e8e93"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_addition_action_closed_input"
                        android:layout_width="wrap_content"
