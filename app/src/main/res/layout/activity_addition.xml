                        android:layout_marginVertical="18dp"
                        android:text="실천행동"
                        android:textAppearance="@style/M14"
                        android:textColor="@color/green_1_98ffa9"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_addition_action_opened_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:bufferType="spannable"
                        android:textAppearance="@style/Sb20"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_addition_action_opened_title" />

                    <EditText
                        android:id="@+id/et_addition_action"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:backgroundTint="@color/gray_3_5d5d6b"
                        android:inputType="text"
                        android:textAppearance="@style/M14"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_addition_action_opened_desc" />

                    <TextView
                        android:id="@+id/tv_addition_action_text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/20"
                        android:textAppearance="@style/R12"
                        android:textColor="@color/gray_3_5d5d6b"
                        app:layout_constraintEnd_toEndOf="@id/et_addition_action"
                        app:layout_constraintTop_toBottomOf="@id/et_addition_action" />

                    <TextView
                        android:id="@+id/tv_addition_action_example"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="39dp"
                        android:text="예시)"
                        android:textAppearance="@style/R14"
                        android:textColor="@color/gray_3_5d5d6b"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_addition_action" />

                    <TextView
                        android:id="@+id/tv_addition_action_example_mission"
                        android:layout_width="wrap_content"
