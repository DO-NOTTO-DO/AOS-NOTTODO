<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_recommendation_action_select_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_solid_gray_1_radius_12"
        android:paddingHorizontal="28dp"
        android:paddingVertical="16dp"
        android:text="유튜브 프리미엄 해제하기"
        android:textAppearance="@style/R14"
        android:textColor="@color/gray_4_9398aa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ic_chkeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:src="@drawable/ic_green_check"
        app:layout_constraintEnd_toEndOf="@id/layout_recommendation_action_select_category"
        app:layout_constraintTop_toTopOf="@id/layout_recommendation_action_select_category" />

</androidx.constraintlayout.widget.ConstraintLayout>
