<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_onboard_third"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rectangle_solid_gray_1_radius_54">

    <ImageView
        android:id="@+id/iv_onboard_fifth_item"
        android:layout_width="36dp"
        android:layout_height="0dp"
        android:layout_marginVertical="17dp"
        android:layout_marginStart="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_youtube" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginStart="13dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_onboard_fifth_item"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_onboard_fifth_situation_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_solid_gray_8_radius_30"
            android:paddingHorizontal="7dp"
            android:paddingVertical="2dp"
            android:textAppearance="@style/R10"
            android:textColor="@color/gray_6_e6e6f2"
            tools:text="취침 전" />

        <TextView
            android:id="@+id/tv_onboard_fifth_mission_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAppearance="@style/R13"
            android:textColor="@color/white"
            tools:text="유튜브 추천 영상 생각없이 보지 않기" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>